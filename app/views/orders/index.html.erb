<div class="block-section">
  <div class="container">
    <div class="now-incoming incoming-full">
      <div class="slick-slider slick-initialized">
        <div class="slick-list">
          <div class="slick-track">
          </div>
        </div>
      </div>
    </div>
    <div class="now-incoming incoming-full mt-5">
      <div class="slick-slider slick-initialized">
        <div class="slick-list">
          <div class="slick-track"></div>
        </div>
      </div>
    </div>
    <div class="table-cancel-confirm-container">
    </div>
    <h1 class="block-title mb-4 text-center"><%= t "history_order" %></h1>
    <div class="history-switch">
      <div class="item now active"><%= t "welcome" %></div>
    </div>
    <div class="history-table-container">
      <%= render("shared/search_order_of_user") %> 
      <div class="history-table">
        <div class="history-table-row history-table-heading">
          <div class="history-table-cell history-table-col1"><%= t "number" %></div>
          <div class="history-table-cell history-table-col2"><%= t "time" %></div>
          <div class="history-table-cell history-table-col3"><%= t "place" %></div>
          <div class="history-table-cell history-table-col4"><%= t "total_money" %></div>
          <div class="history-table-cell history-table-col5"><%= t "status" %></div>
          <div class="history-table-cell history-table-col6"><%= t "details" %></div>
          <div class="history-table-cell history-table-col7"><%= t "restaurant" %></div>
          <div class="history-table-cell history-table-col8"><%= t "action" %></div>
        </div>
        <% @orders.each_with_index do |order, index| %>
          <div class="history-table-row ">
            <div class="history-table-cell history-table-col1">
              <%= page_index params[:page], index, Settings.order_page %>
            </div>
            <div class="history-table-cell history-table-col2">
              <%= order.created_at.strftime(Settings.time_format) %>
            </div>
            <div class="history-table-cell history-table-col3">
              <%= order.address %>
            </div>
            <div class="history-table-cell history-table-col4">
              <%= order.total_money %>
            </div>
            <div class="history-table-cell history-table-col5" id="order_status_<%= order.id %>">
              <%= order.status.humanize %>
            </div>
            <div class="history-table-cell history-table-col6">
              <%= link_to t("detail"), order_details_path(id: order.id) %>
            </div>
            <div class="history-table-cell history-table-col7">
              <%= order.restaurant_name %>
            </div>
            <div class="history-table1-cell history-table1-col8" id ="render_button_<%= order.id %>">
              <%= render "shared/button", order: order %>
            </div>
          </div>
        <% end %>
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>
