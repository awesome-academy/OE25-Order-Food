<header class="main-header">
  <div class="container-header">
    <div class="container">
      <div class="header-content navbar row justify-content-between
        align-items-center">
        <div class="logo-now col-auto">
          <span>
            <%= link_to image_tag("logo.png", alt:"rails_logo",
              class: "cover"), root_url, target: "_self" %>
          </span>
        </div>
        <div class="main-nav col">
          <a class="nav-item active" href="#"><%= t "restaurant" %></a>
        </div>
        <div class="user-acc col-auto">
          <% if logged_in? %>
            <div class="dropdown">
              <button class="dropbtn btn btn-none-bg" id="dropbtn">
                <%= current_user.name %>
              </button>
              <div id="myDropdown" class="dropdown-content">
                <%= link_to t("order_history"), "#", target: "_self" %>
                <%= link_to t("update_account"), current_user,
                  target: "_self" %>
                <%= link_to t("log_out"), logout_path, target: "_self",
                  method: :delete %>
              </div>
            </div>
          <% else %>
            <%= link_to login_path do %>
              <button type="button" class="btn btn-none-bg btn-login">
                <%= t("log_in") %>
              </button>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
