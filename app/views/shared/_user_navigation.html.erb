<div class="now-navigation-profile user-nav">
  <div class="header-profile">
    <div class="row align-items-center">
      <div class="col-auto">
        <%= image_tag current_user.image, class: "avatar-circle",
          alt: current_user.name %>
      </div>
      <div class="col txt-bold font15"><%= current_user.name %></div>
    </div>
  </div>
  <div class="navigation-profile">
    <%= link_to profile_path, class: "item-navigation active", target: "_self",
      title: t("update_profile") do %>
      <div class="row">
        <div class="col-auto">
          <i class="fas fa-user"></i>
        </div>
        <div class="col"><%= t "update_profile" %></div>
        <div class="col-auto">
          <i class="nav-icon-arrow-thin right"></i>
        </div>
      </div>
    <% end %>
  </div>
</div>
